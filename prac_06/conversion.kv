BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '10'
            font_size: 48

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                color: (1,0,0,1)
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                color: (0,0,1,1)
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert miles to kilometres'
        font_size: 40
        on_press: app.handle_calculate()

    Label:
        id: output_label
        font_size: 48
        color: (0, 1, 1, 1)


