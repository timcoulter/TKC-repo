BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '5'
            font_size: 48
            multiline: False

        Button:
            text: 'Square'
            on_press: app.handle_calculate(int(input_number.text))

        Label:
            id: output_label
            font_size: 48
            color: (1, 0, 1, 1)

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Enter a number and press "Square"'
            font_size: 30



